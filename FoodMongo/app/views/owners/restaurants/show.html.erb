<%= render partial: "layouts/nav_bar" %>
<div class="table">
  <h1>Restaurant Details</h1>
  <table class="table" summary="Restaurant detail view" colspan='4'>
    <tr>
      <th>Name</th>
      <td><%= @restaurant.name %></td>
    </tr>
    <tr>
      <th>Location</th>
      <td><%= @restaurant.location %></td>
    </tr>
    <tr>
      <th>City</th>
      <% if @city.nil? %>
        <td></td>
      <% else %>
        <td><%= @city.name %></td>
      <% end %>
    </tr>
    <tr>
      <th>Rating</th>
      <td><%= @sum %></td>
    </tr>
    <tr>
      <th>Rate for two</th>
      <td><%= @restaurant.rate_for_two %></td>
    </tr>
  </table>
  <br />
<h3>Menu Items</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr><td><%= link_to "Add item to menu" , new_menu_item_url %></td></tr>
    <% @menu_items.each do |menu_item| %>
      <tr>
        <td><%= menu_item.name %></td>
        <td><%= menu_item.amount %></td>
        <!-- On click adds the item to the cart of the customer-->
        <td><%= link_to "Edit" , edit_menu_item_path(menu_item) %></td>
          <td><%= link_to 'Destroy', menu_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
    <tr>
      <!-- Redirects to page where customer confirms order-->
    </tr>
  </tbody>
</table>
</div>

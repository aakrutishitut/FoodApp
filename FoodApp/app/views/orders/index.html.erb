<!-- Displays list of orders placed by customer or received by restaurant-->
<%= render partial: "layouts/nav_bar" %>
<h1>Orders</h1>
<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>Order total</td>
        <td><%= order.total %></td>
        <td><%= order.status %></td>
        <% if order.status=="Confirmed" %>
          <td>
            <!-- If the order is not delivered, order can be cancelled-->
            <%= link_to 'Cancel',order_url(order), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        <% end %>
      </tr>
    <% end %>
    <tr>
      <% if current_user.typeofu == 'customer' %>
        <td>
          <%= link_to 'Place order',  new_order_path(:restaurant_id => params[:restaurant]) %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>

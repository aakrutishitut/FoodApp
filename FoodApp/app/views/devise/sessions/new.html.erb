<div class="initial_form">
<!-- Default form login -->
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "text-center border border-light p-5") do |f| %>

    <p class="h4 mb-4">Sign in</p>

    <!-- Email -->
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:id => "defaultLoginFormEmail",:class => "form-control mb-4",:placeholder => "E-mail" %>

    <!-- Password -->
        <%= f.password_field :password, autocomplete: "current-password", :id => "defaultLoginFormPassword",:class => "form-control mb-4",:placeholder => "Password"%>

    <div class="d-flex justify-content-around">
        <div>
            <!-- Remember me -->
            <div class="custom-control custom-checkbox">
                <%= f.check_box :remember_me , :class => "custom-control-input", :id => "defaultLoginFormRemember" %>
                <%= f.label :remember_me, :class => "custom-control-label", :for => "defaultLoginFormRemember"%>
            </div>
        </div>
    </div>

    <!-- Sign in button -->
    <%= f.submit "Log in",:class => "btn btn-info btn-block my-4" %>

    <!-- Register -->
    <!--  -->
<% end %>

<%= render "devise/shared/links" %>
<!-- Default form login -->
</div>
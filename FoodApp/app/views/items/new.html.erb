<%= error_messages_for(@item) %>
<%= render partial: "layouts/nav_bar_restaurant" %>
<div class="form">
<h1>Add item to your order</h1>
  <%= form_for(:item, :url => {:action => 'create'},:class => "text-center border border-light p-5") do |f| %>
    <div class="form-row mb-4">
      <!--Quantity -->
      <%= f.text_field :quantity,:id => "defaultRegisterFormLastName", :class =>"form-control" ,:placeholder =>"Quantity" %>
      <!--MenuItemId-->
      <%= f.hidden_field :menu_item_id, value: params[:menu_item_id_rec] %>
      <!--Name-->
      <%= f.hidden_field :name, value: params[:name_rec] %>
      <!--Amount-->
      <%= f.hidden_field :amount, value: params[:amount_rec] %>
      <!--RestaurantId-->
      <%= f.hidden_field :restaurant_id, value: params[:restaurant_id] %>
      <br />
      <br />
      <div class="actions">
        <%= f.submit "Add",class: "btn btn-info my-4 btn-block" %>
      </div>
    </div>
  <% end %>
</div>
